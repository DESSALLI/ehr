{% extends 'base.html.twig' %}

{% block title %}Patients{% endblock %}

{% block body %}
    <h1>Patients</h1>

    <table class="table">
        <tbody>
    
            <tr>
                <th>Name</th>
                <td>{{ patient.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ patient.email }}</td>
            </tr>
            <tr>
                <th>Contact</th>
                <td>{{ patient.contact }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ patient.address }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ patient.code }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_patients_index') }}">back to list</a>

    <a href="{{ path('app_admin_patients_edit', {'id': patient.id}) }}">edit</a>

    {{ include('admin_patients/_delete_form.html.twig') }}
{% endblock %}
